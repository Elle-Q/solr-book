                KOREAN ("ko"),
                LATVIAN ("lv"),
                LITHUANIAN ("lt"),
                MALTESE ("mt"),
                NORWEGIAN ("no"),
                POLISH ("pl"),
                PORTUGUESE ("pt"),
                ROMANIAN ("ro"),
